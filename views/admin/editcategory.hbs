<div class="col-sm-9 col-xs-12 content pt-3 pl-0">
  <h5 class="mb-0"><strong>Product Categories Management</strong></h5>
  <span class="text-secondary">Categories Management
    <i class="fa fa-angle-right"></i>
    Update</span>

  <div class="row mt-3">
    <div class="col-sm-12">
      <!--Default elements-->
      <div class="mt-1 mb-3 p-3 button-container bg-white border shadow-sm">
        <h6 class="mb-2">Update Category Details</h6>

        <form
          class="form-horizontal mt-4 mb-5"
          accept="/admin//edit-category/{{cate._id}}"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group row">
            <label class="control-label col-sm-2" for="input-1">Category Name</label>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                id="input-1"
                value="{{cate.category}}"
                name="category"
              />
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-sm-2" for="input-2">Change Image</label>
            <div class="col-sm-10">
              <input
                type="file"
                class="form-control"
                id="input-2"
                onchange="viewImage(event)"
                name="categoryImage"
              />
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-sm-2" for="input-2">Image</label>
            <div class="col-sm-10">
              <img
                src="/images/categoryImages/{{cate._id}}.png"
                alt=""
                id="imgView"
                class="imgView"
              />
            </div>
          </div>
          <div class="form-group row">
            <button class="btn btn-primary col-sm-2 ml-5">Submit</button>
            <div class="col-sm-10">

            </div>
          </div>

        </form>

      </div>

    </div>
  </div>

</div>