<!--Content right-->
<div class="col-sm-9 col-xs-12 content pt-3 pl-0">
    <h5 class="mb-0"><strong>User Management</strong></h5>

    <div class="row mt-3">
        <div class="col-sm-12">
            <!--Datatable-->
            <div class="mt-1 mb-3 p-3 button-container bg-white border shadow-sm">
                <h6 class="mb-2">All User</h6>

                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Profile Pic</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each allUsers}}
                            <tr>
                                <td></td>
                                <td>{{this.username}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.mobile}}</td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-link text-danger p-1 " data-toggle="tooltip" data-placement="top" title="Block User"
                                        onclick="banUser('{{this._id}}','block','{{this.username}}')"><i class="fas fa-ban"></i></button>
                                </td>
                            </tr>
                            {{/each}}

                    </table>
                </div>
            </div>
            <!--/Datatable-->

        </div>
    </div>



</div>