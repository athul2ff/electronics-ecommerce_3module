<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      {{#each categories}}
      <!-- shop -->
      <div class="col-md-4 col-xs-6">
        <div class="shop">
          <div class="shop-img">
            <img src="./images/categoryImages/{{this._id}}.png" alt="" />
          </div>
          <div class="shop-body">
            <h3>{{this.category}}<br />Collection</h3>
            <a href="#" class="cta-btn">Shop now
              <i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
      </div>
      <!-- /shop -->
      {{/each}}

    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->

<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">

    <!-- section title -->
    <div class="col-md-12">
      <div class="section-title">
        <h3 class="title">Products</h3>

      </div>
    </div>
    <!-- /section title -->

    <!--Cards with image-->
    <div class="mt-1 mb-3 button-container">
      <div class="row">
        {{#each allProduct}}
        <div class="col-md-3 col-sm-6 mb-3 allProduct products {{this.category}}">
          <span class="text-white d-none">*</span>
          <div class="card position-relative">
            <a href="/productDetails/{{this._id}}">
              <img class="card-img-top" src="/images/productImage/{{this._id}}1.png" alt="" />
            </a>
            {{offerPercentage this.price
            this.offer
            this.discound}}</span>
            <div class="card-body text-center bg-light">
              <p class="product-category">{{this.category}}</p>
              <h6 class="product-name"><a href="#">{{this.ProductName}}</a></h6>
              <p class="product-price">â‚¹{{this.price}}</p>
              <div class="add-to-cart mt-4">
                <button onclick="addToCart('{{this._id}}','{{../userSession._id}}')"
                  class="btn btn-primary addToCartBtn col-12"><i class="fa fa-shopping-cart"></i>
                  add to cart</button>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
    <!--/Cards with image-->
    <!-- Products tab & slick -->

    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->

