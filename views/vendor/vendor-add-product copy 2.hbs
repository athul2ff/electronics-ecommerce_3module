<!--Content right-->
<div class="col-sm-9 col-xs-12 content pt-3 pl-0">
  <h5 class="mb-0"><strong>Add Product</strong></h5>
  <span class="text-secondary">Product Management
    <i class="fa fa-angle-right"></i>
    Add Product</span>

  <div class="row mt-3">
    <div class="col-sm-12">
      <!--Validation types using Form-validator.js-->
      <div class="mt-1 mb-4 p-3 button-container bg-white border shadow-sm">
        <h6 class="mb-2">Enter Product Details</h6>
        <p class="mb-2">
          <code>Upload 4 Images of Product</code>
        </p>

        <form id="addProduct" class="mt-3" method="POST" autocomplete="off" enctype="multipart/form-data" {{!
          action="/vendor/add-product" }}>
          <div class="form-group row">
            <label for="Required1" class="col-sm-3">Select Product Category<code>*</code></label>
            <div class="col-sm-9">
              <select class="custom-select" id="inputGroupSelect01" name="category">
                {{#each categories}}
                <option value="{{this.category}}">{{this.category}}</option>
                {{/each}}
              </select>

            </div>
          </div>
          <div class="form-group row">
            <label for="Required1" class="col-sm-3">Product Name
              <code>*</code></label>
            <div class="col-sm-9">

              <input type="text" id="Required1" class="form-control d-none" name="vendorID" value="{{session._id}}" />
              <input type="text" id="Required1" class="form-control" name="ProductName" />
            </div>
          </div>

          <div class="form-group row">
            <label for="productBrand" class="col-sm-3">Product Brand
              <code>*</code>
            </label>
            <div class="col-sm-9">
              <input type="text" id="productBrand" class="form-control" name="productBrand" />
            </div>
          </div>
          <div class="form-group row">
            <label for="price" class="col-sm-3">Price <code>*</code> </label>
            <div class="col-sm-9">
              <input type="number" id="price" class="form-control" name="price" />
            </div>
          </div>
          <div class="form-group row">
            <label for="qty" class="col-sm-3">Quantity <code>*</code> </label>
            <div class="col-sm-9">
              <input type="number" id="qty" class="form-control" name="stock" />
            </div>
          </div>
          <div class="form-group row">
            <label for="price" class="col-sm-3">Status <code>*</code> </label>
            <div class="col-sm-9">
              <select class="custom-select" id="inputGroupSelect01" name="status">
                <option value="published">Published</option>
                <option value="draft">Draft</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label for="Rlength1" class="col-sm-3 mt-3">Product Description</label>
            <div class="col-sm-9">
              <textarea id="Rlength1" class="form-control" name="description" rows="5"></textarea>
            </div>
          </div>
          {{! IMages }}

          <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="form-group">
                <label for="img1">Main Image</label>
                <input type="file" class="form-control image" id="img1" name="img1"
                  accept="image/png, image/gif, image/jpeg" />
              </div>
              <div>
                <img class="imgView w-100" id="imgView1" />
              </div>

            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="form-group">
                <label for="img2">Second Image</label>
                <input type="file" class="form-control image" id="img2" name="img2"
                  accept="image/png, image/gif, image/jpeg" />
              </div>
              <div>
                <img class="imgView w-100" id="imgView2" />
              </div>

            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="form-group">
                <label for="img3">Third Image Image</label>
                <input type="file" class="form-control image" id="img3" name="img3"
                  accept="image/png, image/gif, image/jpeg" />
              </div>
              <div>
                <img class="imgView w-100" id="imgView3" />
              </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="form-group">
                <label for="img4">Fourth Image Image</label>
                <input type="file" class="form-control image" id="img4" name="img4"
                  accept="image/png, image/gif, image/jpeg" />
              </div>
              <div>
                <img class="imgView w-100" id="imgView4" />
              </div>

            </div>
          </div>

          <div class="form-group pt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
          {{!-- modal --}}
          <div class="modal" tabindex="-1" role="dialog" id="modal">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header text-center">
                  <h5 class="modal-title text-secondary"><strong>Crop Image</strong></h5>
                  <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="width: 100%;">
                  <div id="image-box">
                  </div>
                </div>
                <div class="preview" id="preview">

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-primary" id="crop">Crop</button>
                </div>
              </div>
            </div>
          </div>

        </form>

      </div>

    </div>
  </div>

  <!--Main Content-->

</div>
<!--Page Wrapper-->