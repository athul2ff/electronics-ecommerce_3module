<div class="col-sm-9 col-xs-12 content pt-3 pl-0">
  <h5 class="mb-0"><strong>Product Management</strong></h5>
  {{! <span class="text-secondary">Ecommerce
    <i class="fa fa-angle-right"></i>
    products</span> }}

  <div class="mt-4 mb-4 p-3 bg-white border shadow-sm lh-sm">
    <!--Product Listing-->
    <div class="product-list">

      <div class="row border-bottom mb-4">
        <div class="col-sm-8 pt-2"><h6 class="mb-4 bc-header">Product listing</h6></div>
        <div class="col-sm-4 text-right pb-3">
          <a
            class="btn btn-round btn-theme text-white"
            href="/vendor/add-product"
          ><i class="fa fa-plus"></i>
            Add product</a>
        </div>
      </div>

      <div class="table-responsive product-list">

        <table id="example" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th width="6%">Image</th>
              <th>Product name</th>
              <th>Amount</th>
              <th>Stock</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
              <tr>
                <td class="align-middle"><img
                    src="/images/productImage/{{this._id}}1.png"
                    width="80px"
                    alt=""
                  /></td>
                <td class="align-middle">
                  <h6><strong>{{this.ProductName}}</strong></h6>
                  <p>{{this.description}}</p>
                </td>
                <td class="align-middle">{{this.price}}</td>
                <td class="align-middle"><span
                    class="text-danger"
                  >{{this.stock}}</span></td>
                <td class="align-middle">
                  <select
                    class="custom-select"
                    id="productStatus"
                    name="status"
                      onchange="changeProductStatus('{{this._id}}')"
                  >
                    <option value="Published">Published</option>
                    <option
                      value="Draft"
                      
                    >Draft</option>
                  </select>
                </td>
                <td class="align-middle text-center">
                  <a
                    class="btn btn-link text-theme p-1"
                    href="/vendor/edit-product/{{this._id}}"
                    onclick="return confirm('Are you want to update {{this.ProductName}} data ?')"
                  ><i class="fa fa-pencil"></i></a>
                  <button
                    class="btn btn-link text-danger p-1"
                    onclick="deleteProductfromVendor('{{this._id}}','{{this.vendorID}}')"
                  ><i class="fas fa-trash"></i></button>
                </td>
              </tr>
            {{/each}}

          </tbody>
        </table>
      </div>
    </div>
    <!--/Product Listing-->
  </div>

</div>
